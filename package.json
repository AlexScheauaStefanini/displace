{
  "name": "displace",
  "version": "0.1.0",
  "description": "Tiny javascript library to create moveable DOM elements.",
  "main": "dist/display.min.js",
  "scripts": {
    "build": "NODE_PATH=. NODE_ENV=prod webpack --config ./webpack.config.build.js",
    "dev": "NODE_PATH=. NODE_ENV=prod webpack -w --config ./webpack.config.build.js",

    "zdev": "NODE_PATH=. webpack -w --config ./dev.config.js",
    "server1": "NODE_PATH=. webpack-dev-server -w --hot",
    "sb": "NODE_PATH=. webpack --config ./webpack.config.server.js",
    "server": "NODE_PATH=. webpack-dev-server -w  --config ./webpack.config.server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/catc/displace.git"
  },
  "keywords": [
    "moveable",
    "drag"
  ],
  "author": "Catalin Covic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/catc/displace/issues"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      [
        "transform-es2015-classes",
        {
          "loose": true
        }
      ]
    ]
  },
  "homepage": "https://github.com/catc/displace#readme",
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.0.5",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "eslint": "^2.13.1",
    "node-sass": "^3.9.3",
    "sass-loader": "^4.0.2",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.1"
  }
}
